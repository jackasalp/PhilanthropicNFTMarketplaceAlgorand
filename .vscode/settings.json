{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/node_modules": true,

    // Hide built package ESM files
    "packages/**/*.js": {
      "when": "$(basename).d.ts"
    },
    "packages/**/*.map": true,
    "packages/**/*.d.ts": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/.next": true,
    "**/.yarn": true
  }
}
